{
  "name": "related-anime",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"yarn workspace @related-anime/server dev\" \"yarn workspace @related-anime/client start\"",
    "start": "yarn workspace @related-anime/server start",
    "build": "yarn workspace @related-anime/client build",
    "lint": "concurrently \"yarn lint:root\" \"yarn lint:server\" \"yarn lint:client\"",
    "lint:root": "yarn prettier ./*.* --write --ignore-unknown",
    "lint:server": "yarn workspace @related-anime/server lint",
    "lint:client": "yarn workspace @related-anime/client lint",
    "prepare": "husky install"
  },
  "devDependencies": {
    "concurrently": "^3.6.1",
    "husky": "^7.0.0",
    "prettier": "2.4.1"
  },
  "engines": {
    "node": "16.x"
  }
}
